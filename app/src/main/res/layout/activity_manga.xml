<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:background="@drawable/bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_back_manga"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_arrow_back_24dp"
            android:onClick="BackHome"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_Backchapter_manga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_navigate_before"
            android:gravity="center" />
        <TextView
            android:id="@+id/txt_chapter_manga"
            android:textColor="#FFEE54"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chapter 1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_Nextchapter_manga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_navigate_next"
            android:gravity="center" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvManga"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
</LinearLayout>